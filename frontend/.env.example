# ==========================================
# Site Configuration
# ==========================================
VITE_SITE_URL=https://www.yoursite.com
VITE_API_URL=https://api.yoursite.com

# ==========================================
# Analytics & Tracking
# ==========================================

# Google Analytics 4 Measurement ID
# Get from: https://analytics.google.com/
VITE_GA4_ID=G-XXXXXXXXXX

# Google Tag Manager (Optional)
# Get from: https://tagmanager.google.com/
VITE_GTM_ID=GTM-XXXXXXX

# Google Site Verification Code
# Get from: https://search.google.com/search-console
# Add the code from the meta tag verification method
VITE_GOOGLE_VERIFICATION=abc123xyz789

# Facebook Pixel ID (Optional)
# Get from: https://business.facebook.com/
VITE_FB_PIXEL_ID=123456789012345

# ==========================================
# SEO Configuration
# ==========================================

# Allow search engine indexing (set to false for staging)
VITE_ALLOW_INDEXING=true

# ==========================================
# API Configuration (If different from default)
# ==========================================
# VITE_API_TIMEOUT=30000

# ==========================================
# Feature Flags (Optional)
# ==========================================
# VITE_ENABLE_REVIEWS=true
# VITE_ENABLE_WISHLIST=true
# VITE_ENABLE_CHAT=true

# ==========================================
# Payment Gateway (If needed for schema)
# ==========================================
# VITE_RAZORPAY_KEY_ID=rzp_test_xxxxx

# ==========================================
# CDN Configuration (Optional)
# ==========================================
# VITE_IMAGE_CDN=https://cdn.yoursite.com
# VITE_STATIC_CDN=https://static.yoursite.com
